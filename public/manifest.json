{
  "manifest_version": 3,
  "name": "Rewrite for Me",
  "version": "1.0.0",
  "description": "A browser extension to help you rewrite text",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://iwinuithcugihfsgepgo.supabase.co/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
